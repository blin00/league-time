doctype html
html
    head
        title League Time
        link(href='/favicon.ico' rel='icon')
        link(href='css/bootstrap.min.css' rel='stylesheet')
        link(href='css/index.css' rel='stylesheet')
        script(src='js/index.js')
        if production
            script (function(l,E,a,g,u,e){l['GoogleAnalyticsObject']=g;l[g]=l[g]||function(){(l[g].q=l[g].q||[]).push(arguments)},l[g].l=1*new Date();u=E.createElement(a),e=E.getElementsByTagName(a)[0];u.async=1;u.src='https://www.google-analytics.com/analytics.js';e.parentNode.insertBefore(u,e)})(window,document,'script','ga');ga('create','UA-49282813-2','auto');ga('send','pageview')
    body
        div.content
            form#search
                div.input-group
                    span.input-group-addon
                        select(name='region')
                            for region in regions
                                option(value=region)= region.toLocaleUpperCase()
                    input.form-control(name='summoner' placeholder='summoner name...')
                    span.input-group-btn
                        button.btn.btn-primary(type='submit') Go
            img#icon.img-rounded.hidden
