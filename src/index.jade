doctype html
html
    head
        title League Time
        link(href='/favicon.ico' rel='icon')
        link(href='css/bootstrap.min.css' rel='stylesheet')
        link(href='css/index.css' rel='stylesheet')
        script(src='js/index.js')
        if production
            script (function(l,E,a,g,u,e){l['GoogleAnalyticsObject']=g;l[g]=l[g]||function(){(l[g].q=l[g].q||[]).push(arguments)},l[g].l=+new Date();u=E.createElement(a),e=E.getElementsByTagName(a)[0];u.async=1;u.src='https://www.google-analytics.com/analytics.js';e.parentNode.insertBefore(u,e)})(window,document,'script','ga');ga('create','UA-49282813-2','auto');ga('send','pageview')
    body
        div(style='position:absolute;top:8px;left:8px')
            if production
                small work in progress
            else
                a(href='https://league-time.herokuapp.com')
                    small live website
        div(style='position:absolute;top:8px;right:8px')
            a(href='img/sona.jpg' target='_blank')
                small something else
        div
            form#search
                div.input-group
                    span.input-group-addon
                        select(name='region')
                            for region in regions
                                option(value=region)= region.toLocaleUpperCase()
                    input.form-control(name='summoner' placeholder='summoner name...')
                    span.input-group-btn
                        button.btn.btn-primary(type='submit') Go
            div#status.content
            div#graph.content
            div#stats.content
            div#matches.content
